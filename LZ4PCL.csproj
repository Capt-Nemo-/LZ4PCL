<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Description>LZ4 compression portable class library</Description>
    <Company>Matthew Ducker</Company>
    <Copyright>Copyright ©  2014</Copyright>
    <NeutralLanguage>en</NeutralLanguage>
    <Authors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>RELEASE;NETSTANDARD1_4;RELEASE;NETSTANDARD1_4</DefineConstants>
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ReleaseWithUnsafe|AnyCPU'">
    <DefineConstants>RELEASE;INCLUDE_UNSAFE;NETSTANDARD1_4;RELEASEWITHUNSAFE;NETSTANDARD1_4</DefineConstants>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <Optimize>True</Optimize>
    <DocumentationFile>bin\ReleaseWithUnsafe\netstandard1.4\LZ4DNS.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>